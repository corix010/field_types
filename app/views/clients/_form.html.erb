<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <!-- <%= f.text_field :name %> -->
    <%= f.text_field :name, {:value => 1, :class => 'rico', :style => 'border:1px solid red'} %>
  </div>
  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active, {:checked => true} %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.phone_field :phone %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :home_page %><br />
    <%= f.url_field :home_page %>
  </div>
  <div class="field">
    <%= f.label :merit %><br />
    <%= f.number_field :merit %>
  </div>
  <div class="field">
    <%= f.label :payment %><br />
    <%= f.number_field :payment, {:precision => 5, :scale => 2} %>
  </div>
  <div class="field">
    <%= f.label :due %><br />
    <%= f.datetime_select :due %>
  </div>
  <div class="field">
    <%= f.label :drop_id %><br />
    <!-- <%= f.number_field :drop_id %> -->
    <%= f.collection_select :drop_id, @drops, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :radio_id %><br />
    <%= f.number_field :radio_id %>
  </div>
  <div class="field">
    <%= f.label :check_id %><br />
    <%= f.number_field :check_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
